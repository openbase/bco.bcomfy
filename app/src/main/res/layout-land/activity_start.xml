<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.openbase.bco.bcomfy.activityStart.StartActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_weight="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="72sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.30" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" />

    <TextView
        android:text="@string/gui_connect_bco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAlignment="center"
        android:layout_weight="0.09" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />

    <Button
        android:text="@string/record_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_record"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:onClick="onButtonRecordClicked" />

    <Button
        android:id="@+id/button_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onDebugButtonClicked"
        android:text="DEBUG"
        android:textAlignment="center" />
</LinearLayout>
