    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/progressBarPowerConsumption"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/layoutConsumption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Consumption:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewConsumptionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\? W"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Current:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewCurrentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\? A"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVoltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Voltage:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewVoltageValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\? V"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>